    <string name="detail_day_label">Day</string>
    <string name="detail_min_label">Min</string>
    <string name="detail_max_label">Max</string>
    <string name="detail_night_label">Night</string>
    <string name="detail_morn_label">Morn</string>
    <string name="detail_eve_label">Eve</string>
    <string name="list_item_forecast_min_label_first">Min</string>
    <string name="list_item_forecast_max_label_first">Max</string>


    <!-- Date label when displaying today's weather forecast [CHAR LIMIT=20] -->
    <string name="today">Auj</string>

    <!-- Date label when displaying tomorrow's weather forecast [CHAR LIMIT=20] -->
    <string name="tomorrow">Demain</string>

    <!-- Date format for displaying day of week and date (i.e. Mon Jun 1) [CHAR LIMIT=20] -->
    <string name="format_full_friendly_date"><xliff:g id="day">%1$s</xliff:g>, <xliff:g id="date">%2$s</xliff:g></string>
